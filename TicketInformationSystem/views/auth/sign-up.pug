extends ../_shared/_master
block body
    div.row.main
        div.panel-heading
            div.panel-title.text-center
                h1.title
                    | Create User
                hr
        div.main-login.main-center
            form.form-horizontal(action='/auth/sign-up', method="POST")
                div.form-group
                    label.control-label(for="username")
                        | Username
                    div.input-group
                        input.form-control(type="text", name="username", placeholder="Enter username")
                
                div.form-group
                    label.control-label(for="password")
                        | Password
                    div.input-group
                        input.form-control(type="password", name="password", placeholder="Enter password")
                
                div.form-group
                    label.control-label(for="repeat-password")
                        | Repeat Password
                    div.input-group
                        input.form-control(type="password", name="repeat-password", placeholder="Repeat password")

                div.form-group
                    label.control-label(for="email")
                        | Email
                    div.input-group
                        input.form-control(type="email", name="email", placeholder="Enter email", required="true")

                div.form-group
                    button.btn.btn-primary.btn-lg.btn-block.login-button(type="submit")
                        | Sign Up

                div.login-register
                    a(href="/auth/sign-in")
                        | Log In